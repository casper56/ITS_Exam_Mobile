[
    "<style>.q-table td { vertical-align: middle; } .header-bg { background: #f8f9fa; font-weight: bold; text-align: center; } .category-title { background: #e2e3e5; font-weight: bold; color: #383d41; } .code-font { font-family: 'Cascadia Code', Consolas, monospace; color: #0056b3; font-size: 13px; }</style>",
    "<table class=\"q-table w-100 t-center\">  <thead>    <tr class=\"header-bg\">      <td class=\"w-15\">指令 (Command)</td>      <td class=\"w-42\">公式 / 語法結構</td>      <td class=\"w-42\">參數與功能說明</td>    </tr>  </thead>  <tbody>",
    "    <tr>",
    "      <td><b>CREATE</b></td>",
    "      <td class=\"code-font\">CREATE TABLE 表名 (欄位 型別 [約束])</td>",
    "      <td>建立新資料表、預存程序或索引。</td>",
    "    </tr>",
    "    <tr>",
    "      <td><b>ALTER</b></td>",
    "      <td class=\"code-font\">ALTER TABLE 表名 ADD/DROP/ALTER COLUMN 欄位</td>",
    "      <td>修改現有表格結構（加欄位、改型態）。</td>",
    "    </tr>",
    "    <tr>",
    "      <td><b>DROP</b></td>",
    "      <td class=\"code-font\">DROP TABLE/PROCEDURE 名稱</td>",
    "      <td>完全刪除物件（連結構都不留）。</td>",
    "    </tr>",
    "    <tr>",
    "      <td><b>TRUNCATE</b></td>",
    "      <td class=\"code-font\">TRUNCATE TABLE 表名</td>",
    "      <td>清空表格內所有資料，但保留表格結構。</td>",
    "    </tr>",
    "    <tr>",
    "      <td><b>RENAME</b></td>",
    "      <td class=\"code-font\">EXEC sp_rename '舊名', '新名'</td>",
    "      <td>更改物件名稱。</td>",
    "    </tr>",
    "    <tr>",
    "      <td><b>SELECT</b></td>",
    "      <td class=\"code-font\">SELECT 欄位 FROM 表 WHERE 條件</td>",
    "      <td>讀取資料。可用 DISTINCT 去除重複。</td>",
    "    </tr>",
    "    <tr>",
    "      <td><b>INSERT</b></td>",
    "      <td class=\"code-font\">INSERT INTO 表 (欄位) VALUES (值)</td>",
    "      <td>新增資料。</td>",
    "    </tr>",
    "    <tr>",
    "      <td><b>UPDATE</b></td>",
    "      <td class=\"code-font\">UPDATE 表 SET 欄位=值 WHERE 條件</td>",
    "      <td>修改資料。注意：沒 WHERE 會改全表。</td>",
    "    </tr>",
    "    <tr>",
    "      <td><b>DELETE</b></td>",
    "      <td class=\"code-font\">DELETE FROM 表 WHERE 條件</td>",
    "      <td>刪除特定列。注意：沒 WHERE 會刪全表。</td>",
    "    </tr>",
    "    <tr>",
    "      <td><b>ORDER BY</b></td>",
    "      <td class=\"code-font\">ORDER BY 欄位 [ASC/DESC]</td>",
    "      <td>排序：ASC (升冪)、DESC (降冪)。</td>",
    "    </tr>",
    "    <tr>",
    "      <td><b>GROUP BY</b></td>",
    "      <td class=\"code-font\">GROUP BY 欄位</td>",
    "      <td>群組化。通常配合聚合函數（SUM, AVG）。</td>",
    "    </tr>",
    "    <tr>",
    "      <td><b>HAVING</b></td>",
    "      <td class=\"code-font\">GROUP BY ... HAVING 條件</td>",
    "      <td>對群組後的結果進行篩選（不能用 WHERE）。</td>",
    "    </tr>",
    "    <tr>",
    "      <td><b>JOIN</b></td>",
    "      <td class=\"code-font\">FROM A JOIN B ON A.ID = B.ID</td>",
    "      <td>合併多張表（INNER, LEFT, RIGHT, FULL）。</td>",
    "    </tr>",
    "    <tr>",
    "      <td><b>UNION</b></td>",
    "      <td class=\"code-font\">SELECT... UNION SELECT...</td>",
    "      <td>合併兩個查詢結果（會自動去重）。</td>",
    "    </tr>",
    "    <tr>",
    "      <td><b>GRANT</b></td>",
    "      <td class=\"code-font\">GRANT 權限 ON 物件 TO 使用者</td>",
    "      <td>賦予使用者權限（如 SELECT, UPDATE）。</td>",
    "    </tr>",
    "    <tr>",
    "      <td><b>REVOKE</b></td>",
    "      <td class=\"code-font\">REVOKE 權限 ON 物件 FROM 使用者</td>",
    "      <td>收回權限。</td>",
    "    </tr>",
    "    <tr>",
    "      <td><b>COMMIT</b></td>",
    "      <td class=\"code-font\">COMMIT</td>",
    "      <td>確認提交，將變更永久寫入磁碟。</td>",
    "    </tr>",
    "    <tr>",
    "      <td><b>ROLLBACK</b></td>",
    "      <td class=\"code-font\">ROLLBACK</td>",
    "      <td>撤銷變更，回到上一個提交點。</td>",
    "    </tr>",
    "  </tbody></table>"
]